extends layout

block content
  .main.container(style="text-align: center;")
    h1.form-heading XtremIO Roster Application
    .login-form
      .main-div
        .panel
          p Log In
        form(id="Login" method='POST' action='/login')
          .form-group
            input.form-control(type='text' id='username' placeholder='User name' name='username')
          .form-group
            input.form-control(type='password' id='password' placeholder='password' name='password')
          button.btn.btn-primary(type='submit') Log in 
